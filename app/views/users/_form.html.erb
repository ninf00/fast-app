<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "名前" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Eメール" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "パスワード" %><br>
    <%= f.text_field :password %><br>
  </div>
  <div class="field">
    <%= f.label "電話番号" %><br>
    <%= f.text_field :tel %><br>
  </div>
  <div class="field">
    <%= f.label "コメント" %><br>
    <%= f.text_area :comment, :rows => "5" %><br>
  </div>
  <div class="field">
    <%= f.label "削除フラグ" %><br>
    <%= f.text_field :delete_flag %><br>
  </div>
  <div class="actions">
    <%= f.submit "登録", :style => "width:100px", :confirm => "Are you sure?" %>
  </div>
<% end %>
